<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/readTextView"
        android:layout_width="match_parent"
        android:layout_height="332dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/writeText"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ST_20171225_173200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readTextView" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginBottom="252dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="EXIT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeText" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="TEST"
        app:layout_constraintStart_toEndOf="@+id/colorButton"
        app:layout_constraintTop_toBottomOf="@+id/writeText" />

    <Button
        android:id="@+id/colorButton"
        android:layout_width="58dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="CL"
        app:layout_constraintStart_toEndOf="@+id/alarmButton"
        app:layout_constraintTop_toBottomOf="@+id/writeText" />

    <Button
        android:id="@+id/alarmButton"
        android:layout_width="57dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="AL"
        app:layout_constraintStart_toEndOf="@+id/timeButton"
        app:layout_constraintTop_toBottomOf="@+id/writeText" />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="57dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="ST"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/writeText" />

</android.support.constraint.ConstraintLayout>